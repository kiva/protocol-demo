{
  "name": "controller",
  "version": "1.0.0",
  "private": true,
  "description": "Generic controller for aries agents",
  "license": "none",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:debug": "nodemon --legacy-watch",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/typeorm": "^7.1.0",
    "cache-manager": "^3.3.0",
    "cache-manager-fs-hash": "^0.0.9",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cls-hooked": "^4.2.2",
    "crypto-js": "^4.0.0",
    "dd-trace": "^0.24.0",
    "dotenv": "^8.2.0",
    "express-jwt": "^6.0.0",
    "express-opentracing": "^0.1.1",
    "express-rate-limit": "^5.1.3",
    "express-request-id": "^1.4.1",
    "fs": "0.0.1-security",
    "helmet": "^3.23.3",
    "http-proxy-middleware": "^1.0.5",
    "jaeger-client": "^3.18.0",
    "jwks-rsa": "^1.8.1",
    "opentracing": "^0.14.4",
    "protocol-common": "0.1.20",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.7",
    "winston-loggly-bulk": "^3.1.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.4.2",
    "@types/jest": "^25.2.3",
    "@types/supertest": "^2.0.10",
    "kill-port": "^1.6.1",
    "jest": "^25.5.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "implementations"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts"
  }
}
