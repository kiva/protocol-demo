{
    "name": "demo-controller",
    "version": "1.0.0",
    "description": "Demo controller",
    "license": "Apache-2.0",
    "type": "commonjs",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kiva/protocol-demo.git"
    },
    "scripts": {
        "build": "tsc",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
        "script:dev": "ts-node -r dotenv/config ",
        "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
        "start:debug": "nodemon --legacy-watch",
        "test": "node -r dotenv/config node_modules/.bin/jest --runInBand",
        "test:local": "node -r dotenv/config node_modules/.bin/jest --runInBand -- local",
        "test:integration": "node -r dotenv/config node_modules/.bin/jest --runInBand -- integration"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.14",
        "@nestjs/core": "^7.6.14",
        "@nestjs/swagger": "^4.7.16",
        "aries-controller": "1.0.42",
        "class-transformer": "^0.4.0",
        "dotenv": "^8.2.0",
        "protocol-common": "0.1.34"
    },
    "devDependencies": {
        "@nestjs/testing": "^7.6.14",
        "@types/jest": "^26.0.20",
        "@types/supertest": "^2.0.10",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.3"
    },
    "jest": {
        "globals": {
            "factories": {}
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "test",
        "testRegex": ".e2e-spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "implementations"
        ],
        "ext": "ts",
        "ignore": [
            "src/**/*.spec.ts"
        ],
        "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts"
    }
}
